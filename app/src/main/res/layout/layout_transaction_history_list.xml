<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="@dimen/margin_module_32"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="@dimen/margin_module_2"
        android:layout_marginLeft="@dimen/margin_module_2"
        android:layout_marginTop="@dimen/margin_module_2.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rv_trans_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_module_0.5"
            android:text="@string/str_demo_trans"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/body_2_muli_bold"/>

        <TextView
            fontPath = "fonts/muli-semibold.ttf"
            android:id="@+id/rv_trans_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module_1"
            android:text="15 july 2017 @ 12:46 pm"
            android:textColor="@color/gray_main"
            android:textSize="@dimen/body_1_muli_bold"
            tools:ignore="MissingPrefix"/>

    </LinearLayout>

    <TextView
        fontPath = "fonts/muli-bold.ttf"
        android:id="@+id/rv_trans_amount"
        android:layout_width="@dimen/margin_module_9"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/margin_module_2"
        android:layout_marginRight="@dimen/margin_module_2"
        android:layout_marginTop="@dimen/margin_module_2.5"
        android:gravity="right"
        android:text="@string/str_demo_cash"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/body_2_muli_bold"
        tools:ignore="MissingPrefix"/>

    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:background="@color/gray_main"/>

</FrameLayout>