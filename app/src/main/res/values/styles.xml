<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/gray_main_alpha_50</item>
        <item name="colorControlActivated">@color/cyan_main</item>
        <item name="colorControlHighlight">@color/cyan_main</item>
    </style>

    <style name="TextErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputHelperLayout" parent="TextErrorAppearance">
        <item name="android:textColor">@color/gray_2</item>
    </style>

    <style name="ToolbarWhite" parent="Theme.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!--<item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="AppTheme.IconMenu">
        <!-- Menu/item attributes -->
        <item name="android:itemTextAppearance">@android:style/TextAppearance.Widget.IconMenu.Item
        </item>
        <item name="android:background">@color/gray_main_alpha_50</item>
    </style>


    <style name="TextLabelWhiteHint" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!--<item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="TextLabelErrorHint" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/red_error</item>
        <!--<item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/red_error</item>
        <item name="colorControlNormal">@color/red_error</item>
        <item name="colorControlActivated">@color/red_error</item>
    </style>

    <style name="TextLabelNormalHint" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/cyan_main</item>
        <!--<item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/cyan_main</item>
        <item name="colorControlNormal">@color/cyan_main</item>
        <item name="colorControlActivated">@color/cyan_main</item>
    </style>


    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <!--chetan_error-->


    <style name="TilErrorAppearanceError" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/red_error</item>
        <item name="android:tint">@color/red_error</item>
    </style>

    <style name="TilErrorAppearanceCorrect" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/cyan_main</item>
        <item name="android:tint">@color/cyan_main</item>
    </style>

    <style name="TilHintAppearanceError" parent="TextAppearance.Design.Hint">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/red_error</item>
        <item name="android:tint">@color/red_error</item>
    </style>

    <style name="TilHintAppearanceCorrect" parent="TextAppearance.Design.Hint">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/cyan_main</item>
        <item name="android:tint">@color/cyan_main</item>
    </style>


    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/title_muli_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="HiddenAppear" parent="AppTheme">
        <item name="android:textColor">#00232C83</item>
        <!--<item name="android:textSize">0.1sp</item>-->
    </style>

    <style name="TextColorWhite" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:textSize">0.1sp</item>-->
    </style>


    <style name="btn_blue_style" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cyan_light</item>
        <item name="android:textSize">@dimen/label_muli_bold</item>
    </style>

    <style name="ctb_collapse_style" parent="Widget.Design.CollapsingToolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">@color/blue_app_bar</item>
        <item name="expandedTitleMarginBottom">@dimen/margin_module_2.5</item>
        <item name="expandedTitleMarginTop">@dimen/margin_module_9</item>
        <item name="expandedTitleMarginStart">@dimen/margin_module_6</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="android:minHeight">@dimen/margin_module_7</item>
    </style>


    <style name="et_pin_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/cyan_main</item>
        <item name="android:textColorHint">@color/gray_main</item>
        <item name="android:layout_marginBottom">@dimen/margin_module_1.5</item>
        <item name="android:layout_marginLeft">@dimen/margin_module_2</item>
        <item name="android:layout_marginRight">@dimen/margin_module_2</item>
        <item name="android:layout_marginTop">@dimen/margin_module_1.5</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:hint">@string/str_pin_hint</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/label_muli_bold</item>
    </style>

    <style name="et_normal_style" parent="Widget.AppCompat.EditText">
        <item name="android:paddingBottom">@dimen/margin_module_1.5</item>
        <item name="android:paddingTop">@dimen/margin_module_1.5</item>
        <item name="android:textColor">@color/cyan_main</item>
        <item name="android:textColorHint">@color/gray_main</item>
        <item name="android:textSize">@dimen/label_muli_bold</item>
    </style>

    <style name="EditTextStyle" parent="@style/Base.V7.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/cyan_main</item>
        <item name="colorControlHighlight">@color/cyan_main</item>

    </style>

    <style name="HorizontalProgressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">7dip</item>
        <item name="android:maxHeight">7dip</item>
    </style>


</resources>
