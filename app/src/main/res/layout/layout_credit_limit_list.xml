<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fl_root"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:layout_marginLeft="@dimen/margin_module_2"
            android:layout_marginRight="@dimen/margin_module_2"
            android:layout_weight="0.20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="@dimen/margin_module_7">

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@color/gray_main"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/image_limit_rv_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_shape_gray"
                android:padding="@dimen/margin_module_2"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_clipboard"/>


        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_module_2"
            android:layout_marginTop="@dimen/margin_module_2"
            android:layout_weight="0.60"
            android:minWidth="@dimen/margin_module_27"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_limit_rv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Dummy title for the textView"
                android:textColor="@color/gray_inactive"
                android:textSize="@dimen/body_2_muli_bold"/>

            <TextView
                android:id="@+id/tv_limit_rv_status"
                fontPath="fonts/muli-bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_module_0.5"
                android:gravity="start"
                android:text="Dummy title for the textView"
                android:textAllCaps="true"
                android:textColor="@color/gray_inactive"
                android:textSize="@dimen/caption_2_caps_muli_bold"
                tools:ignore="MissingPrefix"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_module_2"
            android:layout_marginRight="@dimen/margin_module_2"
            android:layout_marginTop="@dimen/margin_module_2"
            android:layout_weight="0.20"
            android:minWidth="@dimen/margin_module_9"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_limit_rv_available"
                fontPath="fonts/muli-bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/str_demo_cash"
                android:textColor="@color/gray_inactive"
                android:textSize="@dimen/body_3_muli_bold"
                tools:ignore="MissingPrefix"/>


            <TextView
                android:id="@+id/tv_limit_rv_bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_module_1"
                android:gravity="end"
                android:text="@string/str_demo_cash"
                android:textColor="@color/gray_inactive"
                android:textSize="@dimen/caption_2_muli_bold"/>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>