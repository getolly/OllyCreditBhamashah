<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_update_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_module_4.5"
        android:layout_marginLeft="@dimen/margin_module_3"
        android:layout_marginRight="@dimen/margin_module_3"
        android:layout_marginTop="@dimen/margin_module_3"
        tools:text="Update your Olly App to Login"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/headline_big"/>
    <ImageView
        android:id="@+id/iv_dialoginc_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/margin_module_3"
        android:src="@drawable/img_update"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right"
        android:text="UPDATE NOW"
        android:id="@+id/btn_update"
        android:textColor="@color/cyan_main"
        android:layout_marginTop="@dimen/margin_module_3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginRight="@dimen/margin_module_2"
        android:layout_marginBottom="@dimen/margin_module_2"
        android:textSize="@dimen/label_muli_bold"/>
</LinearLayout>