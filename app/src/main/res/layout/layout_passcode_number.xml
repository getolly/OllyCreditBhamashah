<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <com.ollycredit.utils.custom_views.PasscodeTextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/pv_passcode"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Error error"
        android:id="@+id/tv_error"
        android:textColor="@color/white"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_module_3"
        android:layout_gravity="center">
    <LinearLayout android:gravity="center">
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginRight="@dimen/margin_module_2"
            android:text="1"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:id="@+id/btn_one"
            android:background="@drawable/button_ripple"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="2"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:layout_marginRight="@dimen/margin_module_2"
            android:id="@+id/btn_two"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="3"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:id="@+id/btn_three"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout android:gravity="center">
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="4"
            android:id="@+id/btn_four"
            android:layout_marginRight="@dimen/margin_module_2"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="5"
            android:id="@+id/btn_five"
            android:layout_marginRight="@dimen/margin_module_2"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="6"
            android:id="@+id/btn_six"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout android:gravity="center">
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="7"
            android:id="@+id/btn_seven"
            android:layout_marginRight="@dimen/margin_module_2"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="8"
            android:id="@+id/btn_eight"
            android:layout_marginRight="@dimen/margin_module_2"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="9"
            android:id="@+id/btn_nine"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" >
        <Button
            android:id="@+id/btn_signin_forgotPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_marginLeft="12dp"
            android:text="@string/msg_forget_pin"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="0"
            android:layout_marginRight="@dimen/margin_module_2"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:id="@+id/btn_zero"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginRight="@dimen/margin_module_2"
            android:layout_marginLeft="@dimen/margin_module_2"
            android:id="@+id/backspace"
            app:srcCompat="@drawable/ic_backspace_black_24dp"
            android:background="@drawable/button_ripple"
            android:textSize="@dimen/headline_regular_muli_regular"
            android:textColor="@color/white"/>
    </LinearLayout>
</TableLayout>
</LinearLayout>