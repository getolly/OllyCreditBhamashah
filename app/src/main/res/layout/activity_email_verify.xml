<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ollycredit.ui.onboarding.signup.verify_email.VerifyEmailActivity">

    <ImageView
        android:layout_marginTop="@dimen/margin_module_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/card_img_mask"
        android:src="@mipmap/card_image_1024"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/margin_module_2">

        <TextView
            fontPath="fonts/muli-bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_module_2"
            android:layout_marginTop="@dimen/margin_module_4"
            android:gravity="left"
            android:text="Almost there! verify your email to get the card"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/headline_regular_muli_regular"
            tools:ignore="MissingPrefix"/>

        <TextView
            fontPath="fonts/muli-bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_module_2"
            android:id="@+id/tv_user_email"
            android:gravity="left"
            android:text="Your Card is now being generated. Meanwhile check your inbox and verify your email ID \n(email@email.com)"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/body_2_muli_bold"
            tools:ignore="MissingPrefix"/>

        <Button
            android:id="@+id/btn_verify_email_already_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="I already confirmed my mail"
            android:textAllCaps="true"
            android:textColor="@color/cyan_main"
            android:textSize="@dimen/body_1_muli_bold"/>
        <Button
            android:id="@+id/btn_verify_email_resend_edit_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="resend email"
            android:textAllCaps="true"
            android:textColor="@color/cyan_main"
            android:textSize="@dimen/body_1_muli_bold"/>

    </LinearLayout>


</FrameLayout>
